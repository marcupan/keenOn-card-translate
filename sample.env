# Environment variables for keenOn-card-translate service
# Copy this file to .env and modify as needed

# Service configuration
PYTHONUNBUFFERED=1
PYTHONPATH=/app
FLASK_ENV=production
TRANSLATION_SERVICE_PORT=50051

# OpenAI API configuration
# Note: The actual API key should be stored in secrets/openai_api_key.txt
# This is just a fallback if Docker secrets are not available
OPENAI_API_KEY=sk-placeholder-openai-api-key-replace-with-actual-key

# Encryption configuration
# Note: The actual encryption key should be stored in secrets/encryption_key.txt
# This is just a fallback if Docker secrets are not available
ENCRYPTION_KEY=secure-encryption-key-for-development-only-change-in-production

# Resource limits
# These are used by the Docker Compose file
TRANSLATE_CPU_LIMIT=1
TRANSLATE_MEMORY_LIMIT=1G
TRANSLATE_CPU_RESERVATION=0.5
TRANSLATE_MEMORY_RESERVATION=512M

# Nginx configuration
NGINX_HOST=keenon-card-translate.example.com
NGINX_HTTP_PORT=8051
NGINX_HTTPS_PORT=8050

# Logging configuration
LOG_LEVEL=INFO
